<%= form_tag( idnet_registrations_url, {class: "form", method: :post}) do %>
<%= hidden_field_tag :consumer, APP_CONFIG[:app_id] %>
<p>
  <%= label_tag :email %>
  <%= text_field_tag 'email' %>
</p>
<p>
  <%= label_tag :password %>

  <%= password_field_tag 'password' %>
</p>
<p>
  <%= label_tag :password_confirmation %>

  <%= password_field_tag 'password_confirmation' %>
</p>
<p>
  <%= label_tag :meta_nickname, :nickname %>

  <%= text_field_tag 'meta[nickname]' %>
</p>
<p>
  <%= label_tag :terms_of_service, :terms_of_service %>

  <%= check_box_tag 'terms_of_service' %>
</p>
<%= submit_tag "Register", :id => "submit", :name => "submit", :class => "form_submit", :disabled => false, :disable_with => "Please wait..." %>
<% end -%>
