<%= form_for :activity, :url => activity_path do |f| %>
  <%= current_user.name %>
  <%= f.text_field :message %>
  <%= f.hidden_field :app_key, value: "main" %>
  <%= f.submit "Comment", :disable_with => 'Commenting...' %>
<% end %>
<div class="comments">
  <% @activities.each do |activity| %>
    <div class="comment">
      <div class="author">
        <%= activity["author"]["name"] %>
        wrote <%= time_ago_in_words(activity["created_at"]) %> ago
      </div>
      <div class="message">
        <%= activity["message"] %>
      </div>
    </div>
  <% end %>
  <%= link_to 'Prev', activities_path(:page => @page-1) if @page>1 %>
  <p><%= "Page #{@page} of #{@pages_count}" %></p>
  <%= link_to 'Next', activities_path(:page => @page+1) if @page<@pages_count %>
</div>

