<% if @errors.present? %>
<h3><%= @errors['error'] %></h3>
<ul>
  <% @errors['details'].each do |detail| %>
  <li><%= detail.flatten.join(' ') %></li>
  <% end %>
</ul>
<% end %>
<%= form_for @user do |f| -%>
<table>
  <tr>
    <td><label for="user_meta_nickname">Nickname</label></td>
    <td><%= f.text_field :name, name: 'meta[nickname]' %></td>
  </tr>
  <tr>
    <td> <label for="user_email">Email</label></td>
    <td><%= f.text_field :email, name: :email %></td>
  </tr>
  <tr>
    <td><label for="user_password">Password</label></td>
    <td><%= f.password_field :password, name: :password %></td>
  </tr>
</table>

<%= f.submit 'Submit' %>
  

<% end -%>